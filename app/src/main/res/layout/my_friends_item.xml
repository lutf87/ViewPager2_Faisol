<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_margin="5dp"
    android:padding="5dp">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txt_friends_name"
        android:text="Name"
        android:textStyle="bold"
        android:textSize="24sp"
        android:fontFamily="@font/collegiateregular"
        android:textColor="@color/white"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txt_friends_gender"
        android:text="Gender"
        android:textSize="20sp"
        android:fontFamily="@font/collegiateregular"
        android:textColor="@color/white"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txt_friends_email"
        android:text="Email"
        android:textStyle="italic"
        android:textSize="20sp"
        android:fontFamily="@font/collegiateregular"
        android:textColor="@color/white"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txt_friends_tlp"
        android:text="Tlp"
        android:textSize="20sp"
        android:fontFamily="@font/collegiateregular"
        android:textColor="@color/white"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txt_friends_address"
        android:text="Address"
        android:textSize="20sp"
        android:fontFamily="@font/collegiateregular"
        android:textColor="@color/white"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="5dp"
        android:background="#BCC8C7C7"/>

</LinearLayout>